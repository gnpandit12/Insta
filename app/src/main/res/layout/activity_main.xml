<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE9E9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#236cb9"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#CBCBCB"
            android:fontFamily="@font/gothic_a1_medium"
            app:tabTextColor="@color/black" />

    </LinearLayout>

    <EditText
        android:id="@+id/user_name_search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Instagram username"
        android:fontFamily="@font/gothic_a1_medium"
        android:textSize="14sp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:background="@drawable/round_corner_edit_text"
        android:drawableStart="@drawable/search_icon_drawable"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>